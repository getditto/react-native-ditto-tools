{
  "name": "react-native-ditto-tools",
  "version": "0.1.0",
  "description": "React Native library for Ditto tools integration",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "react-native-ditto-tools.podspec",
