    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "prepare": "bob build",
    "example": "yarn --cwd example"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "ditto",
    "tools"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/react-native-ditto-tools.git"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/react-native-ditto-tools/issues"
  },
  "homepage": "https://github.com/yourusername/react-native-ditto-tools#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "@types/react-native": "^0.73.0",
    "react-native-builder-bob": "^0.20.0",
    "typescript": "^4.5.2",
    "@dittolive/ditto": "^4.0.0",
    "react-native-config": "^1.5.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "@dittolive/ditto": ">=4.0.0",
    "react-native-config": "^1.5.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
